pipeline {
    agent any
    environment {
        DOCKER_PASS = credentials('docker_pass')
    }
    stages {
        stage('Test') {
            agent { docker 'node:18-alpine3.16' }
            steps {
                sh 'npm install'
                sh 'npm test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'test-report.html', followSymlinks: false
                    // archiveArtifacts artifacts: '/node_modules/jest-html-reporter', followSymlinks: false
                }
            }
        }
        stage('Package'){
            steps {
                sh 'docker build -t Meeting_Service .'
            }
        }
        stage('Publish'){
            steps {
                sh 'docker login -u gioblanco -p ${DOCKER_PASS}'
                sh 'docker tag Meeting_Service gioblanco/meeting-service'
                sh 'docker push gioblanco/meeting-service'
            }
        }
    } 
}