pipeline {
    agent any
    environment {
      DOCKER_PASS = credentials('docker_pass')  
    }
    stages {
        stage('Test'){
            agent { docker 'node:18-alpine3.16' }
            steps {
                sh 'npm install'
                sh 'npm test'
            }
             post {
                always {
                    archiveArtifacts artifacts: 'test-report.html', followSymlinks: false
                }
            }    
        }
        stage('Package') {
            steps {
                sh 'docker build -t at20_meeting_service .'
            }
        }
        stage('Publish') {
            steps {
                sh 'docker login -u lorenasing -p ${DOCKER_PASS}'
                sh 'echo docker tag at20_meeting_service lorenasing/meeting_service'
                sh 'echo docker push lorenasing/meeting_service:'
            }
        }
    }
}
